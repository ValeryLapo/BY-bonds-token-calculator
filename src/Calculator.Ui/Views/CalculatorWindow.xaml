<Window
    x:Class="Calculator.Ui.Views.CalculatorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:Calculator.Core;assembly=Calculator.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewModels="clr-namespace:Calculator.Ui.ViewModels"
    Title="CalculatorWindow"
    Width="800"
    Height="450"
    MinWidth="600"
    MinHeight="500"
    d:DataContext="{d:DesignInstance viewModels:CalculatorViewModel}"
    mc:Ignorable="d">

    <Grid Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="5">
            <StackPanel Grid.IsSharedSizeScope="True" Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="A" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Номинал:" />
                    <TextBox
                        Grid.Column="1"
                        Width="40"
                        Margin="6,0,0,0"
                        MaxLength="5"
                        Text="{Binding Token.ParValue, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="A" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ставка купона:" />
                    <TextBox
                        Grid.Column="1"
                        Width="40"
                        Margin="6,0,0,0"
                        MaxLength="5"
                        Text="{Binding Token.CouponRate, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="A" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="День месяца выплаты дохода:" />
                    <TextBox
                        Grid.Column="1"
                        Width="40"
                        Margin="6,0,0,0"
                        Text="{Binding Token.PaymentDay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid>
                    <Grid.Resources>
                        <ObjectDataProvider
                            x:Key="Frequencies"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
                            <ObjectDataProvider.MethodParameters>
                                <x:Type TypeName="core:CouponFrequency" />
                            </ObjectDataProvider.MethodParameters>
                        </ObjectDataProvider>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="A" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Периодичность выплаты:" />
                    <ComboBox
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        ItemsSource="{Binding Source={StaticResource Frequencies}}"
                        SelectedItem="{Binding Token.CouponFrequency, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="B" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Дата покупки токена:" />
                    <Calendar
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        SelectedDate="{Binding Token.AcquisitionDate, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="B" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Дата погашения:" />
                    <Calendar
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        SelectedDate="{Binding Token.MaturityDate, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DataGrid
                Grid.Row="0"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Payments}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PeriodStart, StringFormat={}{0:dd.MM.yyyy}, Mode=OneTime}"
                        Header="Начало периода" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PeriodEnd, StringFormat={}{0:dd.MM.yyyy}, Mode=OneTime}"
                        Header="Конец периода" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PayDate, StringFormat={}{0:dd.MM.yyyy}, Mode=OneTime}"
                        Header="Дата выплаты" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Value, StringFormat={}{0:F2}, Mode=OneTime}"
                        Header="Сумма выплаты" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel
                Grid.Row="1"
                Margin="0,3,0,0"
                Orientation="Horizontal">
                <TextBlock Text="Итоговая доходность к погашению (YTM):" />
                <TextBlock
                    Margin="6,0,0,0"
                    FontWeight="Bold"
                    Text="{Binding YieldToMaturity, StringFormat='{}{0:P2}'}" />
            </StackPanel>
        </Grid>



    </Grid>
</Window>
